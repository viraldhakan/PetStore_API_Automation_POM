<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Crud Pet Suite">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test verbose="2" preserve-order="true" name="Run Crud in order">
        <classes>
            <class name="PetStore.tests.crud.CreatePetTest"/>
            <class name="PetStore.tests.crud.GetPetTest"/>
            <class name="PetStore.tests.crud.UpdatePetTest"/>
            <class name="PetStore.tests.crud.DeletePetTest"/>
        </classes>
    </test>
</suite>